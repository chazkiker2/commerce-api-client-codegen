{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        // "useDefineForClassFields": true,
        "importHelpers": true,
        // "module": "esnext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "strict": true,
        "allowJs": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist"
    },
    "exclude": [
        "node_modules",
        "./dist"
    ]
}
